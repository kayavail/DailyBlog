<%- include("partials/header") -%>

<div class="post"> <%- startHead.toUpperCase() %> <p><%- homestart.slice(0, 467) + "..." %> </p>
<h6><%= dateAdded %></h6>
</div>

<div class="posts">
  <%x.forEach(function(post){%>
<div class="post">

            <h2><%= post.title.toUpperCase() %></h2>
              <p><%= post.body.substring(0, 199) + "..." %></p>

                  <a href="post/<%=post.title%>">Read more</a>
                <br>
                <br>
                <p class="signature"> Posted by <strong><%= post.author %></strong>: <%= post.dateAdded %></p>

</div>
  <%})%>

</div>



<%- include("partials/footer") -%>
