<%- include("partials/header") -%>


<div class="content">
  <div class="content mainbar">
  <div class="post"> <%- startHead.toUpperCase() %> <p><%- homestart.slice(0, 467) + "..." %> </p>
  <h6><%= dateAdded %></h6>
  </div>

  <div class="posts">
    <%x.map(function(post){%>
  <div class="post">

              <h2><%= post.title.toUpperCase().substring(0, 30) + "..." %></h2>
                <p><%= post.body.substring(0, 199) + "..." %></p>

                    <a href="post/<%=post.id%>">Read more</a>
                  <br>
                  <br>
                  <p class="signature"> Posted by <strong><%= post.author %></strong>: <%= post.dateAdded %></p>

  </div>
    <%})%>

  </div>
<%- include("partials/sidebar") -%>
</div>


<%- include("partials/footer") -%>
